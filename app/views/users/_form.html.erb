<form class="authentication" action="<%= action %>" method="POST">
  <%= form_auth_token %>

<% if button_text == "Sign Up" || button_text == "Update" %>
  <input
    id="fname"
    type="text"
    name="user[fname]"
    placeholder="First Name"
    value="<%= @user.fname %>">

  <input
    id="lname"
    type="text"
    name="user[lname]"
    placeholder="Last Name"
    value="<%= @user.lname %>">
<% end %>

  <input
    id="username"
    type="text"
    name="user[username]"
    placeholder="Username"
    value="<%= @user.username %>">

  <input
    id="password"
    type="password"
    placeholder="Password"
    name="user[password]">

  <button><%= button_text %></button>
</form>
