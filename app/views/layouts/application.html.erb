<!DOCTYPE html>
<html>
<head>
  <title>Genealogy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:errors].join(", ") if flash[:errors] %>
<%= flash[:notices].join(", ") if flash[:notices] %>
<% if signed_in? %>
  <%= button_to "Sign Out", session_url, method: :delete %>
<% else %>
  <%= button_to "Go to Sign Up", new_user_url, method: :get  %>
  <%= button_to "Go to Sign In", new_session_url, method: :get %>
<% end %>

<%= yield %>

</body>
</html>
